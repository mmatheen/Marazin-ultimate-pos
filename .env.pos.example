# POS Module Configuration

# Feature Flag: Enable Modular POS System
# Set to true to use the new modular POS architecture
# Set to false to fall back to the original monolithic POS
# Default: true (modular)
USE_MODULAR_POS=true

# Development/Debug Settings
POS_DEBUG_MODE=false
POS_LOG_API_CALLS=false
POS_LOG_STATE_CHANGES=false

# Cache Settings
POS_CACHE_CUSTOMERS=true
POS_CACHE_PRODUCTS=true
POS_CACHE_EXPIRY_MINUTES=5

# Hotkeys
POS_HOTKEYS_ENABLED=true

# Audio Feedback
POS_AUDIO_ENABLED=true
